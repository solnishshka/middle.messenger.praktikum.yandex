<div class="chat {{classes}}">
    {{> avatar src=src classes=avatarClasses imageClasses=imageClasses}}
    <div class="chat__content">
        <div>
            <h2 class="chat__title">{{title}}</h2>
            <p class="chat__text">{{lastMessageContent}}</p>
        </div>
        <div class="chat__bages">
            <time class="chat__time">{{time}}</time>
            {{#if count}}<span class="chat__count">{{count}}</span>{{/if}}
        </div>
    </div>
</div>