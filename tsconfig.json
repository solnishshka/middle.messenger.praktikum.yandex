{
    "compilerOptions": {
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es2017",
        "typeRoots": [
            "node_modules/@types",
            "/typing/global.d.ts",
            "/typing/scss.d.ts"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext"
    },
    "include": [
        "src/**/*",
        "typing/*"
    ],
    "exclude": [
        "node_modules"
    ]
}